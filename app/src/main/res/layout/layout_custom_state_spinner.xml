<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/stateNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/color_app_bar"
        app:layout_constraintBottom_toBottomOf="@+id/stateFlagIV"
        app:layout_constraintEnd_toStartOf="@+id/stateFlagIV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stateFlagIV"
        tools:text="@string/baden_wÃ¼rttemberg" />

    <TextView
        android:id="@+id/indicatorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="&#9679;"
        android:textColor="#e2e2e2"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stateFlagIV"
        android:layout_width="44dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/indicatorTV"
        app:layout_constraintEnd_toStartOf="@+id/indicatorTV"
        app:layout_constraintTop_toTopOf="@+id/indicatorTV"
        tools:srcCompat="@drawable/german_flag" />

</androidx.constraintlayout.widget.ConstraintLayout>